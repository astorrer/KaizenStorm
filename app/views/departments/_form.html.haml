= form_for @department do |f|
  - if @department.errors.any?
    #error_explanation
      %h2= "#{pluralize(@department.errors.count, "error")} prohibited this department from being saved:"
      %ul
        - @department.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :facility
    = f.select :facility_id, Facility.all.collect {|x| [x.name, x.id]}, {}, :class => 'form-control'
  .form-group
    = f.label :name
    = f.text_field :name, :class => 'form-control'

  = f.submit 'Save', :class => 'btn btn-default'
