- provide(:title, "Manage Departments")

.row
  .col-lg-12
    %h1.page-header
      Manage Departments
      = link_to new_department_path do
        .btn.btn-default.btn-xs
          Create New
          %i.fa.fa-fw.fa-plus
      

.row
  .col-lg-12
    %table.table#datatable
      %thead
        %tr
          %th Name
          %th Facility
          %th

      %tbody
        - @departments.each do |department|
          %tr
            %td= department.name
            %td= department.facility.name
            %td
              .btn-group
                = link_to edit_department_path(department), class: 'btn btn-default btn-sm' do
                  %i.fa.fa-fw.fa-edit
                = link_to department, :method => :delete, class: 'btn btn-danger btn-sm', :data => { :confirm => 'Are you sure?' } do
                  %i.fa.fa-fw.fa-trash
