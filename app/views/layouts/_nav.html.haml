.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => current_user ? root_url : root_url(subdomain: nil)}= Saas::Config.app_name
    .navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li= link_to("Users", users_path)
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Settings
              %b.caret
            %ul.dropdown-menu
              %li= link_to('Edit account', edit_account_url)
              %li= link_to('Change plan', plan_account_url)
              %li= link_to('Billing info', billing_account_url)
              %li= link_to('Cancel account', cancel_account_url)
          %li= link_to("Log out", destroy_user_session_path, method: :delete)
        - else
          %li
            %a{:href => "/signup"} Plans & Pricing
          %li
            %a{:href => "/about"} About Us
          %li
            %a{:href => "mailto:#{Saas::Config.from_email}"} Contact Us
