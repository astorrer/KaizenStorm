!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= Saas::Config.app_name
    = stylesheet_link_tag "application", media: "all"
    = csrf_meta_tags
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    = yield :head
  %body{:class => "#{controller.controller_name} #{controller.action_name}"}
    #wrap
      .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => current_user ? root_url : root_url(subdomain: nil)}= Saas::Config.app_name
          .navbar-collapse.collapse
            %ul.nav.navbar-nav.navbar-right
              - if current_user
                %li= link_to("Users", users_path)
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Settings
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to('Edit account', edit_account_url)
                    %li= link_to('Change plan', plan_account_url)
                    %li= link_to('Billing info', billing_account_url)
                    %li= link_to('Cancel account', cancel_account_url)
                %li= link_to("Log out", destroy_user_session_path, method: :delete)
              - else
                %li
                  %a{:href => "/signup"} Plans & Pricing
                %li
                  %a{:href => "/about"} About Us
                %li
                  %a{:href => "mailto:#{Saas::Config.from_email}"} Contact Us
          / /.navbar-collapse
      .container
        - { :notice => :info, :error => :danger, :alert => :danger }.each do |f, klass|
          - if flash[f]
            %div{:class => "alert alert-#{klass}"}= flash[f]
        = yield
    #footer
      .container
        %ul.nav.navbar-nav.muted.navbar-right
          %li
            %a{:href => "/about"} About Us
          %li
            %a{:href => "/privacy"} Privacy Policy
        %p.text-muted
          \&copy; Company #{Time.now.year}
    = javascript_include_tag "application"
