- provide(:title, "Manage Facilities")


.row
  .col-lg-12
    %h1.page-header
      Manage Facilities
      = link_to new_facility_path do
        .btn.btn-default.btn-xs
          Create New
          %i.fa.fa-fw.fa-plus

.row
  .col-lg-12
    %table.table.table-bordered#datatable
      %thead
        %tr
          %th Name
          %th
    
      %tbody
        - @facilities.each do |facility|
          %tr
            %td= facility.name
            %td
              .btn-group
                = link_to edit_facility_path(facility), class: 'btn btn-default btn-sm' do
                  %i.fa.fa-fw.fa-edit
                = link_to facility, :method => :delete, class: 'btn btn-danger btn-sm', :data => { :confirm => 'Are you sure?' } do
                  %i.fa.fa-fw.fa-trash
