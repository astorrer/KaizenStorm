%h1= @page_title = 'Users'
= link_to('Add user', new_user_url)
%table#users.table.table-striped
  %thead
    %tr
      %th Name
      %th Email
      %th
      %th
  %tbody
    - current_account.users.each do |user|
      %tr
        %td= h user.name
        %td= h user.email
        %td= link_to('Edit', edit_user_path(user))
        %td= link_to('Delete', user, :data => { :method => 'delete', :confirm => 'Are you sure you want to delete this user?' })unless user == current_user
